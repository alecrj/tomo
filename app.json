{
  "expo": {
    "name": "tomo",
    "slug": "tomo",
    "version": "1.0.0",
    "scheme": "tomo",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tomo.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Tomo needs your location to suggest nearby destinations and provide navigation.",
        "NSCameraUsageDescription": "Tomo uses the camera to scan menus and signs for translation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tomo.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location",
      [
        "react-native-maps",
        {
          "useGoogleMaps": true
        }
      ]
    ]
  }
}
