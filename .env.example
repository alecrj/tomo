# Tomo Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (for GPT-4 chat)
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Claude API Key (backup, not currently used)
EXPO_PUBLIC_CLAUDE_API_KEY=your_claude_api_key_here

# OpenWeatherMap API Key (for real-time weather data)
EXPO_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_here

# Google API Key (for Maps SDK, Places API, Routes API)
# This key is used for:
# - Google Maps display (native SDK)
# - Places API (search, details, photos)
# - Routes API (directions)
# Make sure these APIs are enabled in Google Cloud Console
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY=your_google_api_key_here

# Whisper Backend URL (for voice transcription)
EXPO_PUBLIC_WHISPER_BACKEND_URL=https://your-whisper-backend.up.railway.app
